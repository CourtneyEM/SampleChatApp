{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "Components/*": [
        "src/components/*"
      ],
      "Pages/*": [
        "src/pages/*"
      ],
      "Shared/*": [
        "src/shared/*"
      ],
      "Assets/*": [
        "src/assets/*"
      ],
      "Mocks/*": [
        "src/mocks/*"
      ]
    },
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}